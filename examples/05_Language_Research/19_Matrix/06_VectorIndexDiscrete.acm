model Main(simulator) = 
initially
 x = (0,0,0), t = 0, t' = 0, y = (0,0,0)
always
 hypothesis x(0) <= 1 && x(1) <= 1 && x(2) <= 1,
 hypothesis x(0) == x(1) && x(1) == x(2),
 foreach i in 0 : 2 do(
    x(i) = t, y(i) = x(i)),
 t' = 1,
 if t >= 1 then 
  foreach i in 0 : 2 do 
    x(i) + = x(i) - 1,
  t += 0
 noelse